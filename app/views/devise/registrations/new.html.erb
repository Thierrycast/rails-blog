<div class=" bg-blue-300 rounded-xl p-5 w-96 flex flex-col items-center" > 
  <h2 class="font-bold text-2xl mb-5" >Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "flex flex-col gap-2 items-center" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.email_field :email, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.email_field :email, autocomplete: "username" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions bg-blue-800 px-3 py-2 mt-3 text-white rounded-md">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

</div>
<%= render "devise/shared/links" %>
